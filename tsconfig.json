{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES5",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "allowJs": true,
        "sourceMap": true,
        "pretty": true,
        "outDir": "build/",
        "rootDir" : "src/"
    },
    "exclude": [
        "node_modules",
        "build",
        ".vscode"
    ]
}